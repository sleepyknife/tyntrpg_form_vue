{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "types": ["vite/client", "node"],  // ✅ 新增 node
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
	"target": "ESNext",               // ✅ 建議設為 ESNext
    "lib": ["esnext", "dom"],          // ✅ 支援瀏覽器和 Node 環境
	"module": "ESNext", // ✅ 使用 ES 模組
	"esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
